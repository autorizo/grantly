{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "@routes/*": ["src/routes/*"],
      "@controllers/*": ["src/controllers/*"],
      "@db/*": ["src/db/*"],
      "@errors/*": ["src/errors/*"],
      "@utils/*": ["src/utils/*"],
      "@services/*": ["src/services/*"]
    },
    "typeRoots": ["node_modules/@types", "env.d.ts"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
