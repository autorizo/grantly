{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@routes/*": ["routes/*"],
      "@controllers/*": ["controllers/*"],
      "@db/*": ["db/*"],
      "@errors/*": ["errors/*"],
      "@utils/*": ["utils/*"]
    },
    "typeRoots": ["node_modules/@types", "env.d.ts"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
